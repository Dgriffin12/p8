<h1>Listing reviews</h1>
<br>
<br>
<br>

<table class = "table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>Movie Title</th>
      <th>Title</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <tr>
	<td><%= review.movie %></td>
	<td><%= review.title %></td>
        <td><button class = "btn-custom"><%= link_to 'Show', review %></button></td>
        <td><button class = "btn-custom"><%= link_to 'Edit', edit_review_path(review) %></button></td>
        <td><button class = "btn-custom2"><%= link_to 'Destroy', review, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<button class = "btn-custom3"><%= link_to 'New Review', new_review_path %></button>        
<button class = "btn-custom3"><%= link_to 'Home', home_index_path %></button>
